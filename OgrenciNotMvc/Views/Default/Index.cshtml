@using OgrenciNotMvc.Models.Entity_Framework
@model List<TBLDERSLER>

@{
    ViewBag.Title = "Index";
}

<table class="table table-bordered">
    <tr>
        <th>Ders Id</th>
        <th>Ders Adı</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var ders in Model)
    {
        <tr>
            <td>@ders.DersId</td>
            <td>@ders.DersAd</td>
            <td>
                <a id="silinecek" class="btn btn-danger silinecek" data-target="#basic" data-toggle="modal"
                   data-path="@Url.Action("Sil","Default", new { id = ders.DersId })">Sil</a>
                @*<a href="/Default/Sil/@ders.DersId" class="btn btn-danger">Sil</a>*@
                <a href="/Default/Guncelle/@ders.DersId" class="btn btn-success">Güncelle</a>
            </td>
        </tr>
    }
</table>
<a href="/Default/YeniDers" class="btn btn-primary">Yeni Ders Kaydı</a>



<div class="modal fade" id="basic" tabindex="-1" role="basic" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Silmeyi Onayla</h4>
            </div>
            <div class="modal-body">
                Bu öğeyi silmek istediğinize emin misiniz?
            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" type="button" class="btn btn-default">Kapat</button>
                <button id="btnSil" type="button" class="btn btn-primary">Sil</button>
            </div>
        </div>
    </div>



    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            var path_to_delete;

            $(".silinecek").click(function (e) {
                debugger;
                path_to_delete = $(this).attr('data-path');
            });

            $('#btnSil').click(function () {
                debugger;
                window.location = path_to_delete;
            });

    });
    </script>
